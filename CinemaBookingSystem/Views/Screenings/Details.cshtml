@model CinemaBookingSystem.Models.Screening

@{
	ViewData["Title"] = "Tickets";
}

<h2>Buy tickets</h2>

@Html.ValidationSummary(true, "", new { @class = "text-danger" });

<div class="details">
	<div class="bookTicketImg">
		<img src="@Html.DisplayFor(model => @model.ImageUrl)" />
	</div>
	<div class="detailsText">
		<dl>
			<dt>
				@Html.DisplayNameFor(model => model.Title)
			</dt>
			<dd>
				@Html.DisplayFor(model => model.Title)
			</dd>
			<dt>
				@Html.DisplayNameFor(model => model.Time)
			</dt>
			<dd>
				@Html.DisplayFor(model => model.Time)
			</dd>
			<dt>
				@Html.DisplayNameFor(model => model.Description)
			</dt>
			<dd>
				@Html.DisplayFor(model => model.Description)
				<hr />
			</dd>
		</dl>
		<div class="form-group">
			<label for="BookingConfirmation">Choose number of tickets:</label>

			<form asp-action="BookingConfirmation" asp-route-id="@Model.Id" asp-controller="Screenings">
				<input id="focusedInput" type="number" name="numberOfTickets" min="1" max="12" value="1" />
				<input type="submit" value="Buy tickets" class="btn btn-primary" />
			</form>
		</div>
	</div>
</div>
<hr />
<div class="detailsLinks">
	<a asp-action="Index">Back to Movies</a>
</div>

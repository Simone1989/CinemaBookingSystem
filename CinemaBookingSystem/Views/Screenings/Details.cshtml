@model CinemaBookingSystem.Models.Screening

@{
    ViewData["Title"] = "Tickets";
}

<h2>Buy tickets</h2>

<div class="details">
	<div class="bookTicketImg">
		<img src="@Html.DisplayFor(model => @model.ImageUrl)" />
	</div>
	<div class="detailsText">
		<dl>
			<dt>
				@Html.DisplayNameFor(model => model.Title)
			</dt>
			<dd>
				@Html.DisplayFor(model => model.Title)
			</dd>
			<dt>
				@Html.DisplayNameFor(model => model.Time)
			</dt>
			<dd>
				@Html.DisplayFor(model => model.Time)
			</dd>
			<dt>
				@Html.DisplayNameFor(model => model.Description)
			</dt>
			<dd>
				@Html.DisplayFor(model => model.Description)
				<hr />
			</dd>
		</dl>
		<div>
			<p>Choose tickets:</p>

			<form action="/action_page.php">
				<input type="number" name="quantity" min="1" max="12">
				<input type="submit" value="Buy">
			</form>
		</div>
	</div>
</div>

<hr />
<div class="detailsLinks">
    <a asp-action="Index">Back to Movies</a>
</div>
